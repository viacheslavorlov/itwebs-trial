    "@radix-ui/react-switch": "^1.2.6",
    "@tailwindcss/postcss": "^4.1.13",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cross-env": "^7.0.3",
    "graphql": "^16.11.0",
    "lucide-react": "^0.484.0",
    "next": "15.2.3",
    "nodemailer": "^7.0.6",
    "payload": "latest",
    "postcss": "^8.5.6",
    "react": "19.0.0",
    "react-dom": "19.0.0",
    "react-hook-form": "^7.62.0",
    "sharp": "0.32.6",
    "tailwind-merge": "^3.3.1",
